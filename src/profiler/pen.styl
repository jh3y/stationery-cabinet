/**
  * Pen component
  *
  * Pen and sub piece styling
*/

.single-pen
  border        5px solid #2F2F31
  border-radius 2px
  overflow      hidden
  margin        0 2% 25px 0
  position      relative
  box-shadow    2px 2px 3px rgba(0,0,0,0.28)

  .stats
    background #2F2F31

    &:after
      background linear-gradient(to right, rgba(47,47,49,0), #2f2f31 80%)

.iframe-wrap
  position    relative
  height      0
  padding-top 56.25%
  overflow    hidden

  @media (max-width 550px)
    height      150px
    padding-top 0

  iframe
    width            201%
    height           201%
    border           0
    position         absolute
    top              0
    left             0
    background       white
    transform        scale(0.5)
    transform-origin top left
    transition       opacity 0.4s ease
    opacity          0
    visibility       hidden


.iframe-wrap

  iframe
    visibility visible
    opacity 1


  &:hover .meta-overlay
    opacity 1


  & >.meta-overlay
    position   absolute
    top        0
    left       0
    width      100%
    height     100%
    padding    12px 15px 0 15px
    opacity    0
    transition opacity 0.15s ease
    background rgba(68,68,68,0.95)


    h2
      font-weight    bold
      text-transform none
      letter-spacing 0
      margin         0 0 5px 0
      color          #76daff

    p
    li
      color  #F5F5F5
      margin 0 0 5px 0

    a
      color white

    .pen-actions
      position       absolute
      z-index        2
      bottom         0
      padding-bottom 10px
      left           0
      width          101%
      text-align     center
      border-bottom  3px solid #0ebeff


.no-user-line .meta
  padding 12px 10px 10px

.cover-link
  position absolute
  top      0
  right    0
  left     0
  bottom   0
  border   0 !important
  z-index  1

.stats
  position absolute
  right    0
  bottom   4px

  @media (max-width 550px)
    line-height 2.3

  &:after
    content  ""
    position absolute
    top      0
    right    100%
    width    30px
    height   100%

  svg
    width          12px
    height         12px
    display        inline-block
    position       relative
    top            -1px
    vertical-align middle
    margin-left    2px

  .single-stat
  .single-stat.comments
    display     inline-block
    height      100%
    text-align  center
    padding     0 7px 0 9px
    margin-left -6px
    color       #999999

    @media (max-width 830px)
      padding-top 2px

    @media (max-width 550px)
      padding-top 3px

    &:last-child
      margin-right 0

    svg
      fill #999999

.meta
  background  #2F2F31
  position    relative
  font-size   0.85em
  white-space nowrap
  padding     8px 10px 4px
  box-shadow  0 0 2px rgba(0,0,0,0.25)
  z-index     3

  .pen-title
    color         #999999
    font-size     1.0rem
    margin        4px 0 12px 0
    text-overflow ellipsis
    overflow      hidden


  img
    vertical-align middle
    position       relative
    top            -1px
    border         0
    margin         0 3px 0 0

  a
    color      #999
    transition 0.2s

    &:hover
      color #cccccc !important

  .user-and-stats
    white-space nowrap

  .user
    padding 0 5px 0 0

    .username
      display       block
      white-space   nowrap
      overflow      hidden
      text-overflow ellipsis

      img
        width  20px
        height 20px

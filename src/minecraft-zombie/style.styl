    width calc(8 * var(--base-size))
    background hsla(280, 80%, 70%, 0.5)
    top 0
    left 50%
    transform translate(-50%, 0)

  &__arm
    height calc(12 * var(--base-size))
    width calc(4 * var(--base-size))
    background hsla(210, 80%, 70%, 0.5)
    top calc(8 * var(--base-size))
    transform-origin 50% calc(2 * var(--base-size))
    transform rotateX(90deg)

    &--left
      left 0

    &--right
      right 0

  &__torso
    height calc(12 * var(--base-size))
    width calc(8 * var(--base-size))
    background hsla(100, 80%, 70%, 0.5)
    top calc(8 * var(--base-size))
    left 50%
    transform translate(-50%, 0)

  &__leg
    height calc(12 * var(--base-size))
    width calc(4 * var(--base-size))
    background hsla(140, 80%, 70%, 0.5)
    top calc(20 * var(--base-size))
    transform-origin 50% calc(2 * var(--base-size))


    &--left
      left calc(4 * var(--base-size))
      // animation run 0.25s infinite linear alternate
    &--right
      right calc(4 * var(--base-size))
      // animation run 0.25s infinite linear alternate-reverse

@keyframes run
  0%
    transform rotateX(15deg)
  100%
    transform rotateX(-15deg)


// Every thickness needs to be twice what you think
.cuboid-arm
  --thickness 8

  div
    background green
    &:nth-of-type(1)
      background linear-gradient(var(--shirt-two), var(--shirt-two)) 0% 0% / 25% 25%,
                linear-gradient(var(--shirt-three), var(--shirt-three)) 25% 50% / 50% 25% no-repeat
      background-repeat no-repeat
      background-color var(--shirt-one)
    &:nth-of-type(2)
      background var(--zombie-arm-right)
      background-repeat no-repeat
    &:nth-of-type(3):after
      content ''
      height 100%
      width 100%
      position absolute
      background var(--zombie-fist)
      background-repeat no-repeat
    &:nth-of-type(4)
      background var(--zombie-arm-inside)
      background-repeat no-repeat

    &:nth-of-type(5)
      background var(--zombie-arm-top)
      background-repeat no-repeat
    &:nth-of-type(6)
      background green

.cuboid-arm--left div:nth-of-type(4)
  background var(--zombie-arm-right)
  background-repeat no-repeat

.cuboid-arm--left div:nth-of-type(2)
  background var(--zombie-arm-inside)
  background-repeat no-repeat

.cuboid-arm--left div:nth-of-type(3):after
  transform rotateY(180deg) translate3d(0, 0, 1px)

.cuboid-head
  --thickness 16

  div
    background blue

    &:nth-of-type(5)
      background var(--zombie-face)
      background-repeat no-repeat

    &:nth-of-type(1)
      background var(--zombie-crown)
      background-repeat no-repeat

    // Left
    &:nth-of-type(2)
    &:nth-of-type(4)
      background var(--zombie-ear)
      background-repeat no-repeat

    // Back
    &:nth-of-type(6)
      background var(--zombie-crown)
      background-repeat no-repeat

    // Bottom
    &:nth-of-type(3)
      background var(--zombie-crown)
      background-repeat no-repeat



.cuboid-torso
  --thickness 8

  div
    background purple

.cuboid-leg
  --thickness 8

  div

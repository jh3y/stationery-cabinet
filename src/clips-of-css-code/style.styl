  box-sizing: border-box;
}

body {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: 'hsl(%s, 90%, 90%)' % var(--hue, 10);
}

#hue,
#saturation,
#lightness {
  width: 200px;
}

label {
  font-family: sans-serif;
  font-weight: bold;
  color: hsl(0, 0%, 14%);
}

.controls {
  display: flex;
  align-items: center;
  justify-content: center;
}

select {
  font-family: sans-serif;
  padding: 0.5rem;
  background: #fafafa;
  border: '2px solid hsl(%s, 80%, 25%)' % var(--hue, 10);
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  padding: 15px 25px 15px 15px;
  cursor: pointer;
  font-size: 1rem;
  outline: transparent;
}

.select-wrapper {
  position: relative;
}

.select-wrapper:after {
  content: "";
  position: absolute;
  height: 20px;
  right: 8px;
  top: 54%;
  width: 16px;
  transform: translate(0, -50%);
  background: 'hsl(%s, 80%, 35%)' % var(--hue, 10);
  clip-path: polygon(0 10%, 50% 80%, 100% 10%);
  -webkit-clip-path: polygon(0 10%, 50% 80%, 100% 10%);
}

.result {
  display: grid;
  align-items: center;
  grid-template-columns: 1fr auto;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 2rem 3rem -2rem hsl(0, 0%, 10%);
  margin-bottom: 3rem;
  background: hsl(0, 0%, 100%);
}

.result__render {
  height: 200px;
  width: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
}


.clipped {
  height: 85%;
  width: 85%;
  background: 'hsl(%s, 80%, 64%)' % var(--hue, 10);
  clip-path: var(--clip, none);
  transition: clip-path 0.15s ease-in-out, background 0.15s ease-in-out;
}
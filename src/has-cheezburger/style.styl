  90% {
    transform: translate(-50%, -50%) scale(1) rotate(calc(var(--r, 0) * -1deg));
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1) rotate(calc(var(--r, 0) * -1deg));
    opacity: 0;
  }
}


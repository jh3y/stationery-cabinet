  --width calc(15 * var(--cm))
  --depth calc(15 * var(--cm))
  --z calc(155 * var(--cm))
  --x calc(180 * var(--cm))
  --y calc(5 * var(--cm))
  --rotate-cuboid-z 40

  div
    background var(--wall-shade-one)

    &:nth-of-type(1)
      background var(--wall-shade-three)
    &:nth-of-type(3)
      background var(--wall-shade-two)


  --depth calc(26 * var(--cm))
  --width calc(60 * var(--cm))
  --z calc(144 * var(--cm))
  --y var(--cm)
  --x calc(170 * var(--cm))

  div
    background var(--wall-shade-three)

    &:nth-of-type(5)
      background var(--wall-shade-one)
      overflow hidden

      &:after
        content ''
        height 200%
        border-radius 50%
        width 100%
        position absolute
        left 50%
        top 50%
        filter blur(calc(2 * var(--blur)))
        transform translate(-80%, -50%)

    &:nth-of-type(3)
      background var(--wall-shade-two)

    &:nth-of-type(2):after
